<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chenyang="http://schemas.android.com/apk/res/com.chenyang.customprogressbar"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.chenyang.customprogressbar.MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.chenyang.customprogressbar.view.HorizontalProgressbarWithProgress
            android:id="@+id/pg_id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            chenyang:progress_reach_color="#ffff0000"
            chenyang:progress_text_color="#ffff0000"
            chenyang:progress_unreach_color="#44ff0000"
            />
        <com.chenyang.customprogressbar.view.HorizontalProgressbarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="100"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            chenyang:progress_text_color="#1254fc"
            chenyang:progress_unreach_color="#ffff0000"
            />
        <com.chenyang.customprogressbar.view.HorizontalProgressbarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="30"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            chenyang:progress_text_color="#1254fc"
            chenyang:progress_unreach_color="#ffff0000"
            />

        <com.chenyang.customprogressbar.view.RoundProgressBarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            chenyang:radius="50dp"
            chenyang:progress_text_color="#1254fc"
            chenyang:progress_unreach_color="#ffff0000"
            />

        <com.chenyang.customprogressbar.view.RoundProgressBarWithProgress
            android:id="@+id/round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            chenyang:progress_text_color="#000"
            chenyang:progress_unreach_color="#ffff0000"
            chenyang:radius="60dp"
            chenyang:progress_text_size="25sp"
            />
        <com.chenyang.customprogressbar.view.RoundProgressBarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="100"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            chenyang:progress_text_color="#ff0000"
            chenyang:progress_unreach_color="#ffff0000"
            chenyang:radius="80dp"
            />
    </LinearLayout>

</ScrollView>
